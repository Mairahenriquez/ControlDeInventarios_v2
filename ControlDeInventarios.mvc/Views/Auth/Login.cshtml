
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Auth.cshtml";
}

<div class="w-100 h-100 d-flex justify-content-center align-items-center">
    <div class="mx-auto w-100" style="max-width: 500px;">

        @if (TempData["error_login"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show mb-3" role="alert">
                @TempData["error_login"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["success_message"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show mb-3" role="alert">
                @TempData["success_message"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        <div class="card mx-auto w-100" style="max-width: 500px;">
            <div class="card-body">
                <h2>Iniciar Sesión</h2>
                <p>

                </p>
                <form action="@Url.Action("PostLogin","Auth")" method="post">
                    <div class="mt-3">
                        <label for="email" class="form-label">
                            Email
                        </label>
                        <input id="email"
                               value="admin@admin.com"
                               placeholder="Email"
                               type="email"
                               autocomplete="email"
                               class="form-control"
                               name="correo" />
                    </div>
                    <div class="mt-3">
                        <div class="d-flex justify-content-between">
                            <label for="label" class="form-label">
                                Password
                            </label>
                            <a href="@Url.Action("ResetPassword", "Auth")">
                                ¿Olvido la contraseña?
                            </a>
                        </div>
                        <input id="password"
                               value="abcd1234"
                               placeholder="Password"
                               type="password"
                               class="form-control"
                               name="clave" />
                    </div>
                    <div class="mt-3">
                        <label for="rememberMe" class="form-check-label">Recordarme</label>
                        <input id="rememberMe"
                               type="checkbox"
                               value="1"
                               class="form-check-input"
                               name="rememberMe" />
                    </div>
                    <div class="mt-3">
                        <button class="btn btn-primary" type="submit">
                            Iniciar Sesión
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
